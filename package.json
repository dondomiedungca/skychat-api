{
  "name": "nest-typescript-starter",
  "private": true,
  "version": "1.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:staging": "cross-env NODE_ENV=staging nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migration:create": "npm run build && typeorm migration:create ./src/modules/base/database/migrations/%npm_config_name%",
    "migration:development:up": "npm run build && typeorm -d dist/modules/base/database/datasource.development.js migration:run",
    "migration:development:down": "npm run build && typeorm -d dist/modules/base/database/datasource.development.js migration:revert",
    "migration:staging:up": "npm run build && typeorm -d dist/modules/base/database/datasource.staging.js migration:run",
    "migration:staging:down": "npm run build && typeorm -d dist/modules/base/database/datasource.staging.js migration:revert",
    "migration:production:up": "npm run build && typeorm -d dist/modules/base/database/datasource.production.js migration:run",
    "migration:production:down": "npm run build && typeorm -d dist/modules/base/database/datasource.production.js migration:revert",
    "create:user": "npm run build && node cli create-user",
    "create:keypair": "npm run build && node cli create-keypair",
    "seed:config": "npm run build && ts-node ./node_modules/typeorm-seeding/dist/cli.js config",
    "seed:run": "npm run build && ts-node ./node_modules/typeorm-seeding/dist/cli.js -n datasource.development.js -r dist/modules/base/database/ seed"
  },
  "dependencies": {
    "@apollo/server": "^4.5.0",
    "@nestjs-modules/mailer": "^1.8.1",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.0.0",
    "@nestjs/event-emitter": "^1.4.1",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/typeorm": "^9.0.1",
    "@squareboat/nest-console": "^1.1.1",
    "axios": "^1.3.5",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "crypto": "^1.0.1",
    "handlebars": "^4.7.7",
    "helmet": "^7.0.0",
    "joi": "^17.9.0",
    "jsonwebtoken": "^9.0.0",
    "jwt-decode": "^3.1.2",
    "moment-timezone": "^0.5.41",
    "nest-commander": "^3.6.1",
    "nodemailer": "^6.9.1",
    "pg": "^8.10.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.5",
    "typeorm": "^0.3.10"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.4",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/ms": "^0.7.31",
    "@types/node": "^18.0.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "cross-env": "^7.0.3",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.2",
    "prettier": "^2.7.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.5",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.8.2",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^5.0.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
